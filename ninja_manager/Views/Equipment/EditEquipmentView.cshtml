@model ninja_manager.Models.EquipmentFormModel

@{
    ViewData["Title"] = "EditEquipmentView";
}
<div class="container">
    <h1 class="text-center">Edit Equipment</h1>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="EditEquipmentView">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="equipment.Id" />
                <div class="form-group">
                    <label asp-for="equipment.CategoryName" class="control-label"></label>
                    <select asp-for="equipment.CategoryName" class="form-control" asp-items="Model.categorieList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="equipment.Name" class="control-label"></label>
                    <input asp-for="equipment.Name" class="form-control" />
                    <span asp-validation-for="equipment.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="equipment.Strength" class="control-label"></label>
                    <input asp-for="equipment.Strength" class="form-control" />
                    <span asp-validation-for="equipment.Strength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="equipment.Intelligence" class="control-label"></label>
                    <input asp-for="equipment.Intelligence" class="form-control" />
                    <span asp-validation-for="equipment.Intelligence" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="equipment.Agility" class="control-label"></label>
                    <input asp-for="equipment.Agility" class="form-control" />
                    <span asp-validation-for="equipment.Agility" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="equipment.Gold" class="control-label"></label>
                    <input asp-for="equipment.Gold" class="form-control" />
                    <span asp-validation-for="equipment.Gold" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div class="pt-4">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Back to Equipment overview</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
