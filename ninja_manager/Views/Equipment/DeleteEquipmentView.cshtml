@model ninja_manager.Models.Equipment

@{
    ViewData["Title"] = "DeleteEquipmentView";
    string unableToDeleteMessage = TempData["UnableToDeleteMessage"] as string;
}

<div class="container">
    <div class="text-center">
        <h1>Delete Equipment</h1>
        <h3>Are you want to delete this?</h3>



    </div>
    <div class =" w-50 mx-auto">
        @if (!string.IsNullOrEmpty(unableToDeleteMessage))
        {
            <div class="alert alert-danger">
                @Html.Raw(unableToDeleteMessage)
                <form class="text-center pt-3" asp-action="ForceDeleteEquipment">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Yes delete this equipment" class="btn btn-danger" />
                </form>
            </div>
        }
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Strength)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Strength)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Intelligence)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Intelligence)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Agility)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Agility)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gold)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gold)
            </dd>
        </dl>
        <form asp-action="DeleteEquipment">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete equipment" class="btn btn-danger" />
        </form>
        <div class="pt-4">
            <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>